---
const navItems = [
  { 
    label: 'News', 
    href: '/news',
    children: [
      { label: 'Nutrition News', href: '/nutrition-news' },
      { label: 'Food Safety Alerts', href: '/food-safety-alerts' },
      { label: 'Ingredient Expos√©s', href: '/ingredient-exposes' }
    ]
  },
  { 
    label: 'Weight Mgmt', 
    href: '/weight-management',
    children: [
      { label: 'Fat-loss Science', href: '/fat-loss-science' },
      { label: 'Foods to Avoid', href: '/foods-to-avoid' },
      { label: 'Meal Plans', href: '/meal-plans' },
      { label: 'Myths vs Facts', href: '/myths-vs-facts' }
    ]
  },
  { 
    label: 'Recipes', 
    href: '/recipes',
    children: [
      { label: 'Weight-loss Recipes', href: '/weight-loss-recipes' },
      { label: 'High-protein Vegetarian', href: '/high-protein-vegetarian' },
      { label: 'No-maida Alternatives', href: '/no-maida-alternatives' },
      { label: 'Quick Breakfasts', href: '/quick-breakfasts' }
    ]
  },
  { label: 'About', href: '/about' },
];
---

<header class="bg-beige pt-6 pb-4 sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-white/80 backdrop-blur-md rounded-full px-6 py-3 flex justify-between items-center shadow-sm border border-orange-100 relative">
      
      <!-- Logo Area -->
      <div class="flex items-center gap-3">
        <a href="/" class="block group flex-shrink-0">
           <img 
            src="https://raw.githubusercontent.com/nykshubham/purelyhealthyfoods/refs/heads/main/logo%20hd%20no%20background.png" 
            alt="PurelyHealthyFoods Logo" 
            class="h-12 w-12 rounded-full bg-white object-contain group-hover:scale-110 transition-transform duration-300"
           />
        </a>
      </div>

      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex items-center space-x-1">
        <a href="/" class="px-4 py-2 rounded-full text-sm font-bold text-secondary hover:bg-orange-50 hover:text-primary transition-all duration-200">Home</a>
        
        {navItems.map(item => (
          <div class="relative group">
            <a
              href={item.href}
              class="px-4 py-2 rounded-full text-sm font-bold text-secondary hover:bg-orange-50 hover:text-primary transition-all duration-200 flex items-center gap-1"
            >
              {item.label}
              {item.children && (
                <svg class="w-3 h-3 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
              )}
            </a>
            
            {/* Dropdown Menu */}
            {item.children && (
              <div class="absolute top-full left-0 pt-2 w-48 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 transform translate-y-2 group-hover:translate-y-0">
                <div class="bg-white rounded-2xl shadow-xl border border-orange-100 overflow-hidden py-2">
                  {item.children.map(child => (
                    <a href={child.href} class="block px-4 py-2 text-sm text-secondary hover:bg-orange-50 hover:text-primary transition-colors">
                      {child.label}
                    </a>
                  ))}
                </div>
              </div>
            )}
          </div>
        ))}
      </nav>

      <!-- Search & Mobile Actions -->
      <div class="flex items-center gap-2">
        <a href="/search" class="p-2.5 rounded-full bg-orange-50 text-primary hover:bg-primary hover:text-white transition-colors duration-200">
           <span class="sr-only">Search</span>
           <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
             <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
           </svg>
        </a>

        <!-- Mobile Menu Button -->
        <button id="mobile-menu-btn" class="lg:hidden p-2.5 rounded-full text-secondary hover:bg-orange-50 transition-colors">
          <span class="sr-only">Open menu</span>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation Menu (Hidden by default) -->
    <div id="mobile-menu" class="hidden lg:hidden absolute top-full left-0 w-full px-4 mt-2">
      <div class="bg-white rounded-3xl shadow-xl border border-orange-100 overflow-hidden p-4">
        <nav class="flex flex-col space-y-2">
           <a href="/" class="px-4 py-3 rounded-xl font-bold text-secondary hover:bg-orange-50">Home</a>
           {navItems.map(item => (
             <div>
               <div class="flex items-center justify-between">
                 <a href={item.href} class="flex-1 px-4 py-3 rounded-xl font-bold text-secondary hover:bg-orange-50">{item.label}</a>
               </div>
               {item.children && (
                 <div class="pl-8 space-y-1 mt-1 border-l-2 border-orange-100 ml-4">
                   {item.children.map(child => (
                     <a href={child.href} class="block px-4 py-2 text-sm text-gray-600 hover:text-primary rounded-lg hover:bg-orange-50/50">
                       {child.label}
                     </a>
                   ))}
                 </div>
               )}
             </div>
           ))}
        </nav>
      </div>
    </div>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');

  if (btn && menu) {
    btn.addEventListener('click', () => {
      menu.classList.toggle('hidden');
    });
  }
</script>
