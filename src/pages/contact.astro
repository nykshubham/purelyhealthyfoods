---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact Us - PurelyHealthyFoods">
  <div class="max-w-3xl mx-auto px-4 py-16">
    <h1 class="text-4xl font-bold text-gray-900 mb-6">Contact Us</h1>
    <p class="text-lg text-gray-500 mb-8">
      Have a question, suggestion, or correction? We'd love to hear from you.
    </p>
    
    <form class="space-y-6 bg-white p-8 rounded-xl shadow-sm border border-gray-100">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Name</label>
        <input type="text" class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary h-12 px-4 border" />
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
        <input type="email" class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary h-12 px-4 border" />
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Message</label>
        <textarea class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary focus:ring-primary h-32 p-4 border"></textarea>
      </div>
      <button class="bg-primary text-white px-6 py-3 rounded-lg font-bold hover:bg-green-800 transition-colors w-full sm:w-auto">
        Send Message
      </button>
    </form>
  </div>
</Layout>
