---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('news')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="News - PurelyHealthyFoods" description="Latest updates and articles.">
	<section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 bg-beige min-h-screen">
    <div class="text-center mb-16">
      <span class="text-primary font-bold tracking-widest uppercase text-sm mb-2 block">News Wire</span>
      <h1 class="text-5xl md:text-6xl font-serif font-bold text-secondary mb-4">Latest News</h1>
      <p class="text-lg text-gray-500">Breaking updates on food safety and industry regulations.</p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {posts.map((post) => (
        <article class="flex flex-col bg-white rounded-4xl overflow-hidden shadow-sm hover:shadow-2xl transition-shadow duration-300 group">
           <a href={`/news/${post.slug}/`} class="h-56 overflow-hidden block relative">
             <img src={post.data.heroImage} alt={post.data.title} class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" />
             <div class="absolute inset-0 bg-black/10 group-hover:bg-transparent transition-colors"></div>
           </a>
           <div class="p-8 flex-1 flex flex-col">
             <div class="flex justify-between items-center mb-4">
               <span class="text-xs font-bold text-white bg-primary px-2 py-1 rounded-md">{post.data.category}</span>
               <span class="text-xs text-gray-400"><FormattedDate date={post.data.pubDate} /></span>
             </div>
             
             <h2 class="text-2xl font-serif font-bold mb-3 text-secondary group-hover:text-primary transition-colors leading-tight">
               <a href={`/news/${post.slug}/`}>
                 {post.data.title}
               </a>
             </h2>
             <p class="text-gray-500 text-sm mb-6 line-clamp-3 flex-1">
               {post.data.description}
             </p>
             
             <div class="mt-auto pt-4 border-t border-gray-100 flex items-center gap-2">
                <div class="w-6 h-6 rounded-full bg-surface-200 flex items-center justify-center text-xs">ðŸ‘¤</div>
                <span class="text-xs font-bold text-secondary">{post.data.author}</span>
             </div>
           </div>
        </article>
      ))}
    </div>
  </section>
</Layout>
