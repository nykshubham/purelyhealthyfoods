---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('research')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="Research - PurelyHealthyFoods" description="Clinical trials and study reviews.">
	<section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 bg-white min-h-screen">
    <div class="text-center mb-16">
      <span class="text-secondary font-bold tracking-widest uppercase text-sm mb-2 block">Clinical Database</span>
      <h1 class="text-5xl md:text-6xl font-serif font-bold text-secondary mb-4">Research & Studies</h1>
      <p class="text-lg text-gray-500">Evidence-based reviews of the latest medical literature.</p>
    </div>

    <div class="grid grid-cols-1 gap-8 max-w-4xl mx-auto">
      {posts.map((post) => (
        <article class="flex flex-col md:flex-row bg-surface-100 rounded-3xl overflow-hidden shadow-sm hover:shadow-lg transition-all duration-300 group border border-transparent hover:border-gray-200">
           <a href={`/research/${post.slug}/`} class="md:w-1/3 h-48 md:h-auto overflow-hidden relative">
             <img src={post.data.heroImage} alt={post.data.title} class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" />
           </a>
           <div class="p-8 flex-1 flex flex-col justify-center">
             <div class="flex items-center gap-3 mb-3">
               <span class="text-xs font-bold text-white bg-secondary px-2 py-1 rounded-md">Study Review</span>
               <span class="text-xs text-gray-400 font-mono">PMID: 2024-X</span>
             </div>
             
             <h2 class="text-2xl font-serif font-bold mb-3 text-secondary group-hover:text-primary transition-colors">
               <a href={`/research/${post.slug}/`}>
                 {post.data.title}
               </a>
             </h2>
             <p class="text-gray-600 mb-4 line-clamp-2">
               {post.data.description}
             </p>
             
             <div class="mt-auto flex items-center gap-4">
                <a href={`/research/${post.slug}/`} class="text-sm font-bold text-primary hover:underline">Read Full Analysis &rarr;</a>
                <span class="text-xs text-gray-400">Published: <FormattedDate date={post.data.pubDate} /></span>
             </div>
           </div>
        </article>
      ))}
    </div>
  </section>
</Layout>
